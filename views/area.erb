<div class="container">

  <h1> Areas that needs volunteers </h1> 
  <table class="table table-striped table-bordered">
    <tr>
      <th>Area Name</th>
      <th>Spots Available</th>
      <th>Max Volunteers</th>
      <th></th>
    </tr>

    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name  %></td>      
        <td><%= area.spotsavailable__c.to_i %></td>
        <td><%= area.maxvolunteers__c.to_i %></td>
        <td>
          <% if (area.spotsavailable__c.to_i != area.maxvolunteers__c.to_i) %>
            <a href="https://volunteer-heroku-salesforce.herokuapp.com/volunteers?area_id=<%= area.sfid %>" >Volunteers</a>
          <% end %>
        </td>
      </tr>    
    <% end %>
  </table>

</div>
