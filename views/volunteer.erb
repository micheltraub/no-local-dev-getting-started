<!-- Volunteer view -->
<div class="container">

  <h1> Volunteers </h1> 
  <table class="table table-striped table-bordered">
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Email</th>
      <th>First day</th>
      <th>Last day</th>
    </tr>
    <!-- for each volunteer in the area, show a line in the table with his data -->
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.number__c %></td>      
        <td><%= volunteer.name %></td>
        <td><%= volunteer.email__c %></td>
        <td><%= volunteer.startdate__c %></td>
        <td><%= volunteer.finishdate__c %></td>        
    </tr>
    <% end %>
  </table>

</div>
